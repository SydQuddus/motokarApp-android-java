<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".safetyCenter"
        android:background="#121212"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/safetyCenterPage">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/settingDetails"
                app:layout_constraintTop_toTopOf="@+id/safetyCenterPage">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/topButtons">
                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" app:srcCompat="@drawable/ic_chevron_left_green_24dp"
                        android:id="@+id/backButton"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="-10dp"/>
            </LinearLayout>
            <TextView
                    android:text="MotoKar Help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/PageTitleText"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/segoe_ui_bold"
                    android:textSize="23sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            <TextView
                    android:text="This is where Rentors and Rentees can get help with safety, security or urgent matters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/message1"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="16.8sp"
                    android:textColor="#7D7D7D"
                    android:layout_marginBottom="40dp"/>
            <TextView
                    android:text="Urgent support is always available for active users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/message2"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="16.8sp"
                    android:textColor="#B4B4B4"
                    android:layout_marginBottom="40dp"/>
            <TextView
                    android:text="Whether you're a rentor or rentee, you'll have access to MotoKar urgent support line. We can help if you have an urgent matter related to safety such as vehicle damage or stolen."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/message3"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="14sp"
                    android:textColor="#7D7D7D"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/linearLayout2">
                <Button
                        android:text="Get Help"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/getHelpButton"
                        android:background="@color/colorPrimary"
                        android:textColor="#FFFFFF" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.498"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>