<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="15dp">

        <!--<ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/vehicleicon"
                android:layout_gravity="center_vertical"
                android:id="@+id/rentedVehiclePicture"/>-->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:paddingRight="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="undefined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/rentedVehicleName"
                        android:layout_weight="1" app:fontFamily="@font/segoe_ui_bold" android:textColor="#FFFFFF"
                        android:layout_gravity="left"
                        android:textAllCaps="true"
                        android:layout_marginRight="5dp"
                        android:textSize="16.8sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/rentalDate"
                        android:layout_weight="1" app:fontFamily="@font/segoe_ui_bold" android:textColor="#FFFFFF"
                        android:gravity="right"
                        android:textAllCaps="true"
                        android:layout_marginLeft="5dp"
                        android:textSize="16.8sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/firstLayout"
                    app:layout_constraintTop_toBottomOf="@+id/divider1">


                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/rentorProfileImage"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/nameLayout"
                        android:paddingLeft="20dp">
                    <TextView
                            android:text="Owned By"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/vehicleRentorName"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="#7D7D7D"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    <TextView
                            android:text="undefined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personName" android:fontFamily="@font/segoe_ui_bold"
                            android:textColor="#ffff"
                            android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/DateLayout"
                    android:paddingTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider1">


                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/calendericon"
                        android:src="@drawable/finalcalender"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/Dateicon"
                        android:paddingLeft="20dp">
                    <TextView
                            android:text="Rent Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/rentaldate"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="#7D7D7D"
                            android:textSize="14sp"
                            android:textAllCaps="true"/>
                    <TextView
                            android:text="undefined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/vehiclerentdate" android:fontFamily="@font/segoe_ui_bold"
                            android:textColor="#ffff"
                            android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="#4B4C50"
            android:layout_gravity="center"/>

</LinearLayout>