<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inviteFriends"
        android:background="#121212"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/notificationSetting">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/settingDetails"
                app:layout_constraintTop_toTopOf="@+id/notificationSetting">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/topButtons">
                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" app:srcCompat="@drawable/ic_chevron_left_green_24dp"
                        android:id="@+id/backButton"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="-10dp"/>
            </LinearLayout>
            <TextView
                    android:text="Share your love of renting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/PageTitleText"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/segoe_ui_bold"
                    android:textSize="23sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            <TextView
                    android:text="When your friends complete a first-time renting experience, you'll get up to RM10 in your MKwallet."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/message1"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="14sp"
                    android:textColor="#B4B4B4"
                    android:layout_marginBottom="30dp"/>
            <TextView
                    android:text="Friends who sign up for MotoKar with your link will get RM15 off vehicle renting."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/message2"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="14sp"
                    android:textColor="#B4B4B4"
                    android:layout_marginBottom="30dp"/>
            <TextView
                    android:text="When your friends who sign up using your link become a rentor, both of you will get up to RM50 in your MKwallet."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/message3"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="14sp"
                    android:textColor="#B4B4B4"/>
            <TextView
                    android:text="@string/undefined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/userReferCode"
                    android:gravity="center_horizontal"
                    android:textColor="#B4B4B4"
                    app:fontFamily="@font/segoe_ui_bold"
                    android:textSize="25dp"
                    android:layout_marginTop="30dp"/>
            <Button
                    android:text="Copy your code"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" android:id="@+id/copyButton"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="70dp"
                    app:fontFamily="@font/segoe_ui"
                    android:textSize="15dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="MKwallet value"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="16.8sp"
                        android:textColor="#FFFFFF"/>
                <TextView
                        android:id="@+id/mkWalletAmount"
                        android:text="@string/undefined"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="16.8sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="right"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B4C50"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/view"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Read terms and conditions"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui"
                        android:textSize="16.8sp"
                        android:textColor="#FFFFFF"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B4C50"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/view2"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>