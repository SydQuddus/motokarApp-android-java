<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feedback"
        android:background="#121212"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/safetyCenterPage">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/settingDetails"
            app:layout_constraintTop_toTopOf="@+id/safetyCenterPage">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/topButtons">
            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp" app:srcCompat="@drawable/ic_chevron_left_green_24dp"
                    android:id="@+id/backButton"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="-10dp"/>
        </LinearLayout>
        <TextView
                android:text="MotoKar Help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/PageTitleText"
                android:textColor="#FFFFFF"
                app:fontFamily="@font/segoe_ui_bold"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>
        <TextView
                android:text="How are we doing?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/message1"
                android:textColor="#FFFFFF"
                app:fontFamily="@font/segoe_ui_bold"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="15dp"/>
        <TextView
                android:text="We're always working to improve your MotoKar experience. So we would really love to hear from you guys. Give us some suggestions how we can do better."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/message2"
                android:fontFamily="@font/segoe_ui"
                android:textSize="16.8sp"
                android:textColor="#7D7D7D"
                android:gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent">
                <TextView
                        android:text="What would you like to do?"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        android:textColor="#FFFFFF"
                        app:fontFamily="@font/segoe_ui_bold"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="15dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/OptionsButton">
                    <ImageView
                            android:layout_width="280dp"
                            android:layout_height="100dp" app:srcCompat="@drawable/givefeedbackbutton"
                            android:id="@+id/givefeedbackbutton"
                            android:layout_gravity="center"/>
                    <ImageView
                            android:layout_width="280dp"
                            android:layout_height="100dp" app:srcCompat="@drawable/reportbugbutton"
                            android:id="@+id/reportbugbutton"
                            android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
