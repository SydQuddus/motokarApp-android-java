<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp" app:srcCompat="@drawable/vehicleicon"
            android:id="@+id/rentedVehiclePicture"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="15dp" android:paddingRight="15dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">
            <TextView
                    android:text="undefined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/rentedVehicleName"
                    android:layout_weight="1" app:fontFamily="@font/segoe_ui_bold" android:textColor="#FFFFFF"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:textSize="16.8sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/rentalDate"
                    android:layout_weight="1" app:fontFamily="@font/segoe_ui_bold" android:textColor="#FFFFFF"
                    android:gravity="right"
                    android:textAllCaps="true"
                    android:textSize="16.8sp" android:text="@string/undefined"/>
        </LinearLayout>



        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/firstLayout"
                app:layout_constraintTop_toBottomOf="@+id/divider1">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rentorProfileImage"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/nameLayout"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical">
                <TextView
                        android:text="Booked By"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/vehicleRentorName"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="#7D7D7D"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>
                <TextView
                        android:text="undefined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/personName" android:fontFamily="@font/segoe_ui_bold"
                        android:textColor="#ffff"
                        android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4B4C50"
                android:layout_gravity="center"
                android:layout_marginTop="17dp" android:layout_marginBottom="15dp"/>
    </LinearLayout>
</LinearLayout>