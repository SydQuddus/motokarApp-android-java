<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:paddingTop="5dp" android:paddingLeft="10dp"
        android:paddingRight="10dp" android:paddingBottom="5dp" android:orientation="vertical">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/circle_background">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@mipmap/ic_launcher_round"
                android:id="@+id/reviewPicture"/>
    </FrameLayout>
    <TextView
            android:text="@string/undefined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/storiesName" app:fontFamily="@font/segoe_ui"
            android:textColor="#7D7D7D" android:textSize="12sp" android:layout_marginTop="5dp"/>
</LinearLayout>

